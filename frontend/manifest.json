{
  "name": "CommunityNotes",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "script/content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "script/background.js"
  },
  "action": {
    "default_title": "Community Notes",
    "default_popup": "popup.html"
  }
}